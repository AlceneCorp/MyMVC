{% extends 'base.twig' %}

{% block content %}
<div class="container-fluid mt-5">
    <div class="row">
        {% include 'admin/include/adminMenu.twig' %}
        <!-- Main Content -->
        <main class="col-md-12 ms-sm-auto col-lg-10 px-md-4">
            <!-- Header Section -->
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2"><i class="fas fa-question-circle me-2"></i> {{ decrypt(quiz.TEXT) }}</h1>
                <div class="d-inline-block rounded-circle overflow-hidden shadow" style="width: 100px; height: 100px; background-color: white;">
                    <img src="{{ url }}{% if quiz.LOGO %}{{ asset('images/questorium/logo/' ~  decrypt(quiz.slug)  ~ '/' ~ decrypt(quiz.LOGO)) }}{% else %}{{ asset('/images/avatars/noimage.jpg') }}{% endif %}" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;" alt="Logo du questionnaire" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12 rounded border" style="margin-top:20px; padding:25px; background-color:#f0f0f0;">
                    {{ decrypt(quiz.DESC) | raw }}

                    <div class="mb-3">
                        <a href="{{base_url}}/questionnaire/{{ decrypt(quiz.slug) }}/1/1" class="btn btn-primary">Commencer le questionnaire</a>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}