{% extends "base.twig" %}

{% block content %}
<div class="container my-5">
    <h2 class="mb-5 text-center fw-bold display-5">ðŸ“° Nos derniers articles</h2>

    {% if articles is empty %}
        <div class="alert alert-info text-center">Aucun article nâ€™est disponible pour le moment.</div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for article in articles %}
                {% if article.VISIBLE == 1 %}
                <div class="col">
                    <div class="card h-100 article-card border-0">
                        {% if article.IMG %}
                        <div class="article-image-wrapper">
                            <img src="{{ article.IMG }}" class="card-img-top" alt="Image de {{ article.TITLE }}">
                        </div>
                        {% endif %}
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold mb-2 text-primary">{{ article.TITLE }}</h5>
                            <p class="card-text text-muted small flex-grow-1">
                                {{ article.DESCRIPTION|length > 140 ? article.DESCRIPTION|slice(0, 140) ~ '...' : article.DESCRIPTION }}
                            </p>
                            <a href="{{ config('SITE.root_path.value') }}/article/{{ article.ID }}" class="btn btn-sm btn-primary mt-3 align-self-start">
                                Lire la suite <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                        <div class="card-footer text-muted small bg-transparent border-top-0 px-3 pb-3">
                            <i class="fas fa-calendar-alt me-1"></i> {{ article.DATE|date("d/m/Y") }}
                        </div>
                    </div>
                </div>
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}

{% block style %}
<style>
.article-card {
    transition: transform 0.25s ease, box-shadow 0.25s ease;
    border-radius: 0.75rem;
    overflow: hidden;
    background-color: #fff;
}

.article-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 1rem 1.5rem rgba(0, 0, 0, 0.08);
}

.article-image-wrapper {
    overflow: hidden;
    max-height: 200px;
}

.article-image-wrapper img {
    object-fit: cover;
    width: 100%;
    height: 200px;
    transition: transform 0.3s ease;
}

.article-card:hover .article-image-wrapper img {
    transform: scale(1.05);
}

.card-title {
    font-size: 1.1rem;
}

.card-text {
    line-height: 1.6;
    font-size: 0.95rem;
}

.btn-sm {
    font-size: 0.85rem;
    padding: 0.45rem 0.8rem;
    border-radius: 0.4rem;
}
</style>
{% endblock %}
