{% extends 'base.twig' %}

{% block title %}Paramètres{% endblock %}

{% block style %}
<link rel="stylesheet" href="{{url}}{{ asset('css/settings.css') }}">
<style>
    .switch input:checked + .slider {
        background-color: {{ config('SITE.site_color_1.value') }};
    }

    .custom-range {
        -webkit-appearance: none;
        appearance: none;
        width: 100%;
        height: 8px;
        background: #ddd;
        border-radius: 5px;
        outline: none;
        transition: background-color 0.3s ease;
    }

    .custom-range::-webkit-slider-thumb {
        -webkit-appearance: none;
        appearance: none;
        width: 20px;
        height: 20px;
        background: {{ config('SITE.site_color_1.value') }};
        border-radius: 50%;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .custom-range::-moz-range-thumb {
        width: 20px;
        height: 20px;
        background: {{ config('SITE.site_color_1.value') }};
        border-radius: 50%;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .custom-range:hover::-webkit-slider-thumb,
    .custom-range:hover::-moz-range-thumb {
        transform: scale(1.2);
    }

    .custom-range:active {
        background: linear-gradient(to right, {{ config('SITE.site_color_1.value') }} 0%, {{ config('SITE.site_color_2.value') }} 100%);
    }

    .collapse {
        transition: height 0.3s ease-in-out;
    }
</style>
{% endblock %}

{% block content %}
<div class="container-fluid mt-4">
    <div class="row">
        {% include 'admin/include/adminMenu.twig' %}

        <main class="col-md-9 col-lg-9 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="text-center mb-4"><i class="fas fa-cogs me-2"></i> Paramètres de l'application</h1>
            </div>

            {% if flash_message is defined %}
                <div class="alert alert-success">{{ flash_message }}</div>
            {% endif %}

            <form method="POST">
                {% for category in settings_categories %}
                    <div class="category-card mb-3">
                        <h2 class="d-flex justify-content-between align-items-center text-start" style="color:{{ config('SITE.site_color_1.value') }};">
                            <span><i class="fa {{category.ICON}}"></i> {{ category.DESCRIPTION }}</span>
                            <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCategory{{ category.ID }}">
                                <i class="fas fa-chevron-down"></i>
                            </button>
                        </h2>

                        <div id="collapseCategory{{ category.ID }}" class="collapse">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        {% if config('SITE.debug.value') %}<th class='col-2'>Clé</th>{% endif %}
                                        <th class='col-6'>Description</th>
                                        <th>Valeur</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% set category_settings = grouped_settings[category.ID] ?? [] %}
                                    {% if category_settings is empty %}
                                        <tr><td colspan="3">Aucun paramètre pour cette catégorie.</td></tr>
                                    {% else %}
                                        {% for setting in category_settings %}
                                            <tr>
                                                {% if config('SITE.debug.value') %}<td>{{ setting.NAME }}</td>{% endif %}
                                                <td><strong>{{ setting.DESCRIPTION ?: setting.NAME }}</strong></td>
                                                <td>
                                                    {% set field_name = "data[" ~ category.NAME ~ "][" ~ setting.NAME ~ "]" %}
                                                    {% if setting.TYPE == 'textarea' %}
                                                        <textarea id="{{ setting.NAME }}" name="{{ field_name }}" class="form-control" rows="4">{{ setting.VALUE }}</textarea>
                                                    {% elseif setting.TYPE == 'text' or setting.TYPE == 'mail' or setting.TYPE == 'phone' or setting.TYPE == 'date' or setting.TYPE == 'datetime-local' %}
                                                        <input type="{{ setting.TYPE }}" id="{{ setting.NAME }}" name="{{ field_name }}" class="form-control" value="{{ setting.VALUE }}" aria-label="{{ setting.DESCRIPTION }}">
                                                    {% elseif setting.TYPE == 'checkbox' %}
                                                        <label class="switch">
                                                            <input type="hidden" name="{{ field_name }}" value="0">
                                                            <input type="checkbox" id="{{ setting.NAME }}" name="{{ field_name }}" value="1" class="slider" {% if setting.VALUE == '1' %}checked{% endif %}>
                                                            <span class="slider"></span>
                                                        </label>
                                                    {% elseif setting.TYPE == 'color' %}
                                                        <input class="form-control form-control-color" type="color" id="{{ setting.NAME }}" name="{{ field_name }}" value="{{ setting.VALUE }}">
                                                    {% elseif setting.TYPE == 'number' %}
                                                        <input type="number" id="{{ setting.NAME }}" name="{{ field_name }}" class="form-control" value="{{ setting.VALUE }}">
                                                    {% elseif setting.TYPE == 'range' %}
                                                        <div class="mb-3 row position-relative">
                                                            <div class="col-10">
                                                                <input type="range" id="{{ setting.NAME }}" name="{{ field_name }}" class="form-range custom-range" value="{{ setting.VALUE }}" min="0" max="360" oninput="updateRangeValue(this)">
                                                            </div>
                                                            <div class="col-2 d-flex justify-content-center align-items-center">
                                                                <span id="range-value-{{ setting.NAME }}" class="range-value fs-5" style="font-weight: bold; color: {{ config('SITE.site_color_1.value') }}; white-space: nowrap;">
                                                                    {{ setting.VALUE }}°
                                                                </span>
                                                            </div>
                                                        </div>
                                                    {% else %}
                                                        <input type="text" id="{{ setting.NAME }}" name="{{ field_name }}" class="form-control" value="{{ setting.VALUE }}">
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                {% endfor %}

                <div class="fixed-button">
                    <button type="submit" class="btn-primary btn-sm ml-2" value="1" style="background-color:{{ config('SITE.site_color_1.value') }};">Mettre à jour</button>
                </div>
            </form>
        </main>
    </div>
</div>
{% endblock %}

{% block jquery %}
<script>
    function updateRangeValue(input) {
        const rangeValueElement = document.getElementById('range-value-' + input.id);
        if (rangeValueElement) {
            rangeValueElement.textContent = input.value + "°";
        }
    }
</script>
{% endblock %}
