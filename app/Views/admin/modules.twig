{% extends 'base.twig' %}

{% block content %}

<div class="container-fluid">
    <div class="row">
        
        {% include 'admin/include/adminMenu.twig' %}

        <!-- Main Content -->
        <main class="col-md-12 ms-sm-auto col-lg-10 px-md-4">
            <!-- Header Section -->
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2"><i class="fas fa-puzzle-piece me-2"></i> Modules</h1>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Nom du Module</th>
                            <th scope="col">Version</th>
                            <th scope="col">Statut</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for module in modules %}
                            {% for moduleName, moduleData in module %}
                            <tr>
                                <td>{{ moduleData.name.value }}</td>
                                <td class="col-1">{{ moduleData.version.value }}</td>
                                <td class="col-1">
                                    <span class="badge {{ moduleData.active.value ? 'bg-success' : 'bg-danger' }}">
                                        {{ moduleData.active.value ? '<i class="fas fa-check-circle"></i> Actif' : '<i class="fas fa-times-circle"></i> Inactif' }}
                                    </span>
                                </td>
                                <td class="col-2">
                                    <form method="post" class="d-inline">
                                        <input type="hidden" name="module_name" value="{{ moduleName }}">
                                        <input type="hidden" name="module_status" value="{{ moduleData.active.value ? '0' : '1' }}">
                                        <button type="submit" class="btn btn-sm {{ moduleData.active.value ? 'btn-danger' : 'btn-success' }}">
                                            {{ moduleData.active.value ? 'Désactiver' : 'Activer' }}
                                        </button>
                                    </form>
                                    {% if checkPerm('manage_questionnaire_settings') %}
                                    <a class="btn btn-warning btn-sm" href="{{base_url}}/admin/{{ slug(moduleData.name.value) }}/regenerate">Regénérer la SQL</a>
                                    {% endif %}
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="4" class="text-center">Aucun module trouvé.</td>
                            </tr>
                            {% endfor %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>

        </main>

    </div>
</div>
{% endblock %}
