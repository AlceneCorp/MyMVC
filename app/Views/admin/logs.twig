{% extends 'base.twig' %}

{% block content %}
    <div class="container mt-4">
        <h2 class="text-center mb-4">Logs de l'application</h2>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <div>
                <span>Page {{ currentPage }} sur {{ totalPages }}</span>
            </div>

            <nav aria-label="Pagination">
                <ul class="pagination">
                    {% if currentPage > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ baseUrl }}/admin/logs/{{ currentPage - 1 }}" aria-label="Previous">
                                <span aria-hidden="true">&laquo; Précédent</span>
                            </a>
                        </li>
                    {% else %}
                        <li class="page-item disabled">
                            <span class="page-link">&laquo; Précédent</span>
                        </li>
                    {% endif %}

                    {% for page in 1..totalPages %}
                        <li class="page-item {% if page == currentPage %}active{% endif %}">
                            <a class="page-link" href="{{ baseUrl }}/admin/logs/{{ page }}">{{ page }}</a>
                        </li>
                    {% endfor %}

                    {% if currentPage < totalPages %}
                        <li class="page-item">
                            <a class="page-link" href="{{ baseUrl }}/admin/logs/{{ currentPage + 1 }}" aria-label="Next">
                                <span aria-hidden="true">Suivant &raquo;</span>
                            </a>
                        </li>
                    {% else %}
                        <li class="page-item disabled">
                            <span class="page-link">Suivant &raquo;</span>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </div>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Niveau</th>
                    <th scope="col">Catégorie</th>
                    <th scope="col">Message</th>
                    <th scope="col">Utilisateur</th>
                    <th scope="col">IP</th>
                    <th scope="col">Méthode</th>
                    <th scope="col">Date</th>
                </tr>
            </thead>
            <tbody>
                {% for log in logs %}
                    <tr>
                        <td>{{ log.ID }}</td>
                        <td>
                            {% if log.LEVEL == 'ERROR' %}
                                <span class="badge text-danger">{{ log.LEVEL }}</span>
                            {% elseif log.LEVEL == 'INFO' %}
                                <span class="badge text-info">{{ log.LEVEL }}</span>
                            {% elseif log.LEVEL == 'WARNING' %}
                                <span class="badge text-warning">{{ log.LEVEL }}</span>
                            {% elseif log.LEVEL == 'DEBUG' %}
                                <span class="badge text-secondary">{{ log.LEVEL }}</span>
                            {% elseif log.LEVEL == 'CRITICAL' %}
                                <span class="badge text-dark">{{ log.LEVEL }}</span>
                            {% elseif log.LEVEL == 'SUCCESS' %}
                                <span class="badge text-success">{{ log.LEVEL }}</span>
                            {% endif %}
                        </td>
                        <td>{{ log.CATEGORY }}</td>
                        <td>{{ log.MESSAGE }}</td>
                        <td>{{ log.USERS_ID ? 'Utilisateur #' ~ log.USERS_ID : 'Inconnu' }}</td>
                        <td>{{ log.IP_ADDRESS }}</td>
                        <td>{{ log.METHOD }}</td>
                        <td>{{ log.CREATED_AT | date('d-m-Y H:i') }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">Aucun log disponible.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <div>
                <span>Page {{ currentPage }} sur {{ totalPages }}</span>
            </div>

            <nav aria-label="Pagination">
                <ul class="pagination">
                    {% if currentPage > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ baseUrl }}/admin/logs/{{ currentPage - 1 }}" aria-label="Previous">
                                <span aria-hidden="true">&laquo; Précédent</span>
                            </a>
                        </li>
                    {% else %}
                        <li class="page-item disabled">
                            <span class="page-link">&laquo; Précédent</span>
                        </li>
                    {% endif %}

                    {% for page in 1..totalPages %}
                        <li class="page-item {% if page == currentPage %}active{% endif %}">
                            <a class="page-link" href="{{ baseUrl }}/admin/logs/{{ page }}">{{ page }}</a>
                        </li>
                    {% endfor %}

                    {% if currentPage < totalPages %}
                        <li class="page-item">
                            <a class="page-link" href="{{ baseUrl }}/admin/logs/{{ currentPage + 1 }}" aria-label="Next">
                                <span aria-hidden="true">Suivant &raquo;</span>
                            </a>
                        </li>
                    {% else %}
                        <li class="page-item disabled">
                            <span class="page-link">Suivant &raquo;</span>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </div>
{% endblock %}
