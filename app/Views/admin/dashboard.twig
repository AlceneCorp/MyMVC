{% extends 'base.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar bg-dark text-white">
                <div class="d-flex flex-column p-3">
                    <h4 class="text-center mb-4">Admin Dashboard</h4>
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action text-white">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                        <a href="#" class="list-group-item list-group-item-action text-white">
                            <i class="fas fa-users"></i> Users
                        </a>
                        <a href="#" class="list-group-item list-group-item-action text-white">
                            <i class="fas fa-cogs"></i> Settings
                        </a>
                        <a href="#" class="list-group-item list-group-item-action text-white">
                            <i class="fas fa-book"></i> Logs
                        </a>
                        <a href="#" class="list-group-item list-group-item-action text-white">
                            <i class="fas fa-chart-line"></i> Reports
                        </a>
                        <a href="#" class="list-group-item list-group-item-action text-white">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    </div>
                </div>
            </div>

            <!-- Main content -->
            <div class="col-md-9 col-lg-10">
                <div class="container-fluid">
                    <div class="row mt-4">
                        <!-- Dashboard Stats -->
                        <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <h5 class="card-title"><i class="fas fa-users"></i> Total Users</h5>
                                    <p class="card-text">1,234</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h5 class="card-title"><i class="fas fa-chart-line"></i> Active Sessions</h5>
                                    <p class="card-text">356</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                            <div class="card bg-warning text-white">
                                <div class="card-body">
                                    <h5 class="card-title"><i class="fas fa-cart-plus"></i> Pending Orders</h5>
                                    <p class="card-text">78</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                            <div class="card bg-danger text-white">
                                <div class="card-body">
                                    <h5 class="card-title"><i class="fas fa-exclamation-triangle"></i> Critical Issues</h5>
                                    <p class="card-text">5</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Recent Activity -->
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5><i class="fas fa-history"></i> Recent Activity</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group">
                                <li class="list-group-item"><i class="fas fa-user"></i> John Doe logged in</li>
                                <li class="list-group-item"><i class="fas fa-shopping-cart"></i> Jane created an order</li>
                                <li class="list-group-item"><i class="fas fa-cogs"></i> Admin updated system settings</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Sales Chart -->
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5><i class="fas fa-chart-bar"></i> Sales Overview</h5>
                        </div>
                        <div class="card-body">
                            <div class="chart-placeholder" style="height: 300px; background-color: #f2f2f2; text-align: center; line-height: 300px;">
                                Chart here (using Chart.js)
                            </div>
                        </div>
                    </div>

                    <!-- User Table -->
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5><i class="fas fa-table"></i> User Data</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>1</td>
                                        <td>John Doe</td>
                                        <td>johndoe@example.com</td>
                                        <td><span class="badge bg-success">Active</span></td>
                                    </tr>
                                    <tr>
                                        <td>2</td>
                                        <td>Jane Doe</td>
                                        <td>janedoe@example.com</td>
                                        <td><span class="badge bg-warning">Pending</span></td>
                                    </tr>
                                    <tr>
                                        <td>3</td>
                                        <td>Sam Smith</td>
                                        <td>samsmith@example.com</td>
                                        <td><span class="badge bg-danger">Inactive</span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
